doctype html
html
  head
    meta(charset='UTF-8')
    link(href='app.css',rel='stylesheet')
    style.
      .ltp .tp_g, .ltp .tp_m{
        max-width: 420px;
      }
      .tp.translate{
        color:#CF0011;
      }
      .tq-r.translate{
        color:#CF0011;
      }
      .box.ltp.bottom{
        padding:5px;
      }
      .col3--main {
          width: 500px;
          margin: 0;
      }
      .ltp .tp_g, .ltp .tp_m{
        max-width: 390px;
      }

      body{
        -webkit-transform: scale(2);
        -webkit-transform-origin: 0% 0%;
      }

  body
    div.col.col3--main
      div.panel.panel-nb.panel-md-latestPosts
        h2.ltp-heading #{postTitle}
        div.ltps
          ul.ltps-ul

            //- repeat start
            each post in posts
              li.box.ltp
                div.tp-hdr
                  div.tp-th(style='background-image: url(' + post.sendUserThumbnail + ');')
                  i.icn.icn-01.icn-tp-ofl &nbsp;
                  span.tp-pstr #{post.sendUserName}
                  span.tp-ts #{post.timeOrDay}

                case post.postType
                  when 1
                    //- text
                    +body(post.body)
                    +body(post.body,false,true)

                  when 2
                    //- image
                    +body-single-image(post.body)

                  when 3
                    //- user upload image
                    +body-single-image(post.body)

                  when 4
                    //- quotation
                    +body(post.body)
                    +body(post.body,false,true)
                    +quot(post.body[0].comment)

                  when 5
                    //- retalk
                    +retalk-banner(post.body[0])
                    +body-retalk(post.body[0])

                  when 6
                    //- video
                    +body-video(post.body[0])

                  when 7
                    //- text & image
                    +body-single-image(post.body)
                    +body(post.body)
                    +body(post.body,false,true)

            li.box.ltp.bottom

