                  when 1
                    //- text
                    +body(post.body)
                    +body(post.body,false,true)

                  when 2
                    //- stamp
                    +body(post.body,false,false,true)

                  when 3
                    //- user upload image
                    +body(post.body)
                    +body(post.body,false,true)

                  when 4
                    //- quotation
                    +body(post.body)
                    +body(post.body,false,true)
                    +quot(post.body[0].comment)

                  when 5
                    //- retalk
                    +retalk-banner(post.body[0])
                    +body-retalk(post.body[0])

                  when 6
                    //- video
                    +body-video(post.body[0])

                  when 7
                    //- text & image
                    +body(post.body)
                    +body(post.body,false,true)

