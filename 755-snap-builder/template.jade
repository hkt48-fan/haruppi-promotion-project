mixin body-news(body)
  //- bodytype = 9
  - var body = body[0]
  p.rtp.rtp-r
    img.rtp_g(src="#{body.image}")
    br
  p.rtp.rtp-r.rtp__newsTitle
    | #{body.title}
  p.rtp.rtp-r.rtp__newsDetail
    | #{body.detail}
  p.rtp.rtp-r
    a.rtp__newsLink
      | 続きを読む


